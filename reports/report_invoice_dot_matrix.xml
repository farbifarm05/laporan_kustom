<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="paperformat_dot_matrix_printer_invoice_reports" model="report.paperformat">
            <field name="name">A4 Portrait Invoice</field>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">5</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">5</field>
            <field name="dpi">90</field>
        </record>

        <template id="sale_invoice_report_dot_matrix">
            <t t-call="web.html_container">
                <t t-call="web.basic_layout">
                    <t t-foreach="docs" t-as="o">
                        <div class="page" style="font-family: 'Courier', monospace; font-size: 10px; line-height: 1.1;">

                            <div style="font-weight: bold;">
                                <div class="row">
                                    <div class="col-8"><span t-field="o.company_id.name"/></div>
                                    <div class="col-4 text-end" style="font-size: 14px;">FAKTUR</div>
                                </div>
                                <div>Telp/Fax: <span t-field="o.company_id.phone"/></div>
                                <div>NPWP: <span t-field="o.company_id.vat"/></div>
                            </div>
                            <div style="margin-top: 10px;" class="row">
                                <div class="col-6">
                                    KEPADA YTH.<br/>
                                    <span t-field="o.partner_id.name"/><br/>
                                    <span t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                                </div>
                                <div class="col-6">
                                    <table class="table table-sm table-borderless">
                                        <tr><td>No. Faktur</td><td>: <span t-field="o.name"/></td></tr>
                                        <tr><td>No. SO</td><td>: <span t-field="o.invoice_origin"/></td></tr>
                                        <tr><td>Reference No</td><td>: <span t-field="o.ref"/></td></tr>
                                        <tr><td>Tgl. Faktur</td><td>: <span t-field="o.invoice_date" t-options='{"format": "dd-MM-yyyy"}'/></td></tr>
                                        <tr><td>Jatuh Tempo</td><td>: <span t-field="o.invoice_date_due" t-options='{"format": "dd-MM-yyyy"}'/></td></tr>
                                        <tr><td>Term</td><td>: <span t-field="o.invoice_payment_term_id.name"/></td></tr>
                                    </table>
                                </div>
                            </div>
                            <table class="table table-sm" name="invoice_line_table" style="margin-top: 10px;">
                                <thead style="border-top: 1px solid black; border-bottom: 1px solid black;">
                                    <tr>
                                        <th class="text-start">No.</th>
                                        <th class="text-start">Nama Barang</th>
                                        <th class="text-start">Kategori</th>
                                        <th class="text-end">Qty</th>
                                        <th class="text-start">Kemasan</th>
                                        <th class="text-end">Harga Satuan</th>
                                        <th class="text-end">Disk%</th>
                                        <th class="text-end">Jumlah</th>
                                    </tr>
                                </thead>
                                <tbody style="border-bottom: 1px solid black;">
                                    <t t-set="line_no" t-value="0"/>
                                    <t t-foreach="o.invoice_line_ids" t-as="line">
                                        <t t-if="line.display_type == 'product'">
                                            <t t-set="line_no" t-value="line_no + 1"/>
                                            <tr>
                                                <td class="text-start"><t t-esc="line_no"/></td>
                                                <td><span t-field="line.product_id.name"/></td>
                                                <td><span t-if="line.product_id.categ_id" t-esc="line.product_id.categ_id.name.split(' / ')[-1].strip()"/></td>
                                                <td class="text-end"><span t-field="line.quantity" t-options='{"widget": "float", "precision": 2}'/></td>
                                                <td><span t-field="line.product_uom_id.name"/></td>
                                                <td class="text-end"><span t-field="line.price_unit" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                                                <td class="text-end"><span t-field="line.discount"/></td>
                                                <td class="text-end"><span t-field="line.price_subtotal" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                                            </tr>
                                        </t>
                                    </t>
                                </tbody>
                            </table>
                            <div class="clearfix">
                                <div id="total" class="row">
    <div class="col-7" style="border: 1px solid black; padding: 8px; min-height: 50px;">
        <strong>TERBILANG: </strong>
        <span t-field="o.amount_total_words"/>
    </div>
    <div class="col-5">
        <table class="table table-sm table-borderless">
            <tbody>
                <tr>
                    <td><strong>Total</strong></td>
                    <td class="text-end">
                        <span t-field="o.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                    </td>
                </tr>
                <tr t-if="o.amount_discount > 0">
                    <td><strong>Diskon</strong></td>
                    <td class="text-end">
                         <span t-esc="o.amount_discount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                    </td>
                </tr>
                <tr>
                    <td><strong>Pajak</strong></td>
                    <td class="text-end">
                        <span t-field="o.amount_tax" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                    </td>
                </tr>
                <tr>
                    <td><strong>Netto</strong></td>
                    <td class="text-end">
                        <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
                            </div>

                            <div style="margin-top: 5px;">
                                <span t-field="o.narration" t-options="{'widget': 'html'}"/><br/>
                            </div>
                            <div class="row" style="margin-top: 30px; margin: 0;">
                                <div class="col-6 text-center">
                                    Penerima,<br/>
                                    Tanda Tangan / Cap<br/>
                                    <div style="height: 70px;"/>
                                    (.........................)
                                </div>
                                <div class="col-6 text-center">
                                <br/>Hormat kami,
                                <div style="height: 70px;"/>
                                (.........................)
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
        
        <record id="action_report_sale_invoice_dot_matrix" model="ir.actions.report">
            <field name="name">Faktur Kustom</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">laporan_kustom.sale_invoice_report_dot_matrix</field>
            <field name="report_file">laporan_kustom.sale_invoice_report_dot_matrix</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="paperformat_id" ref="laporan_kustom.paperformat_dot_matrix_printer_invoice_reports"/>
            <field name="binding_type">report</field>
        </record>
        
        <record id="action_report_surat_jalan_kustom" model="ir.actions.report">
            <field name="name">Surat Jalan Kustom</field>
            <field name="model">stock.picking</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">laporan_kustom.template_surat_jalan_kustom</field>
            <field name="report_file">laporan_kustom.template_surat_jalan_kustom</field>
            <field name="binding_model_id" ref="stock.model_stock_picking"/>
            <field name="paperformat_id" ref="laporan_kustom.paperformat_dot_matrix_printer_invoice_reports"/>
            <field name="binding_type">report</field>
        </record>

        <template id="template_surat_jalan_kustom">
            <t t-call="web.html_container">
                <t t-call="web.basic_layout">
                    <t t-foreach="docs" t-as="o">
                        <div class="page" style="font-family: 'Courier', monospace; font-size: 10px; line-height: 1.1;">

                            <div style="font-weight: bold;">
                                <div class="row">
                                    <div class="col-8"><span t-field="o.company_id.name"/></div>
                                    <div class="col-4 text-end" style="font-size: 14px;">SURAT JALAN</div>
                                </div>
                                <div>Telp/Fax: <span t-field="o.company_id.phone"/></div>
                                <div>NPWP: <span t-field="o.company_id.vat"/></div>
                            </div>
                            <div style="margin-top: 10px;" class="row">
                                <div class="col-6">
                                    KEPADA YTH.<br/>
                                    <span t-field="o.partner_id.name"/><br/>
                                    <span t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                                </div>
                                <div class="col-6">
                                    <table class="table table-sm table-borderless">
                                        <tr><td>No. Surat Jalan</td><td>: <span t-field="o.name"/></td></tr>
                                        <tr><td>No. SO</td><td>: <span t-field="o.origin"/></td></tr>
                                        <tr><td>Tgl. Pengiriman</td><td>: <span t-field="o.scheduled_date" t-options='{"format": "dd-MM-yyyy"}'/></td></tr>
                                    </table>
                                </div>
                            </div>
                            <table class="table table-sm" name="stock_move_table" style="margin-top: 10px;">
                                <thead style="border-top: 1px solid black; border-bottom: 1px solid black;">
                                    <tr>
                                        <th class="text-start">No.</th>
                                        <th class="text-start">Nama Barang</th>
                                        <th class="text-start">Kategori</th>
                                        <th class="text-end">Jumlah</th>
                                        <th class="text-start">Kemasan</th>
                                    </tr>
                                </thead>
                                <tbody style="border-bottom: 1px solid black;">
                                    <t t-set="line_no" t-value="0"/>
                                    <t t-if="o.state == 'done'">
                                        <t t-foreach="o.move_line_ids" t-as="line">
                                            <t t-set="line_no" t-value="line_no + 1"/>
                                            <tr>
                                                <td class="text-start"><t t-esc="line_no"/></td>
                                                <td><span t-field="line.product_id.name"/></td>
                                                <td><span t-if="line.product_id.categ_id" t-esc="line.product_id.categ_id.name.split(' / ')[-1].strip()"/></td>
                                                <td class="text-end"><span t-field="line.quantity"/></td>
                                                <td><span t-field="line.product_uom_id.name"/></td>
                                            </tr>
                                        </t>
                                    </t>
                                    <t t-else="">
                                        <t t-foreach="o.move_ids_without_package" t-as="line">
                                            <t t-set="line_no" t-value="line_no + 1"/>
                                            <tr>
                                                <td class="text-start"><t t-esc="line_no"/></td>
                                                <td><span t-field="line.product_id.name"/></td>
                                                <td><span t-if="line.product_id.categ_id" t-esc="line.product_id.categ_id.name.split(' / ')[-1].strip()"/></td>
                                                <td class="text-end"><span t-field="line.product_uom_qty"/></td>
                                                <td><span t-field="line.product_uom.name"/></td>
                                            </tr>
                                        </t>
                                    </t>
                                </tbody>
                            </table>

                            <div style="margin-top: 10px;">
                                 <span t-field="o.sale_id.note" t-options="{'widget': 'html'}"/><br/>
                            </div>
                            <div class="row" style="margin-top: 30px; margin: 0;">
                                <div class="col-6 text-center">
                                    Diterima Oleh,<br/>
                                    Penerima<br/>
                                    <div style="height: 70px;"/>
                                    (.........................)
                                </div>
                                <div class="col-6 text-center">
                                <br/>Hormat kami,
                                <div style="height: 84px;"/>
                                (.........................)
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
        
    </data>
</odoo>